pipeline {
        agent any
        stages
    {
        stage('Lint')
        {
                    steps {
                       
                        bat 'heroku git:remote -a spacex-sapient'
                        bat 'git push heroku master'
                        echo 'Linting starts..........'
                        bat 'ng lint'
                        echo 'Linting ends..........'
                    }
        }
        stage('Test')
        {
                    steps {
                        echo 'Testing starts..........'
                        bat 'npm run test-prod'
                        echo 'Testing ends..........'
                    }
        }
        stage('Build')
        {
                    steps {
                        echo 'Building the Code starts..........'
                        bat 'npm run build:ssr'
                        echo 'Building the code ends..........'
                    }
        }
    }
}
