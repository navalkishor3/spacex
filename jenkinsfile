pipeline {
        agent any
        stages
    {
        stage('Lint')
        {
                    steps {
                        echo 'Linting starts..........'
                        bat 'ng lint'
                        echo 'Linting ends..........'
                    }
        }  stage('Test')
        {
                    steps {
                        echo 'Testing starts..........'
                        bat 'npm test-prod'
                        echo 'Testing ends..........'
                    }
        }   stage('Build')
        {
                    steps {
                        echo 'Building the Code starts..........'
                        bat 'npm run build:ssr'
                        echo 'Building the code ends..........'
                    }
        }
    }
}
